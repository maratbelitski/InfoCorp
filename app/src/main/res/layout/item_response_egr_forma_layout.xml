<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/egr"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:padding="8dp"
        app:cardBackgroundColor="@color/second_background_color"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvResponseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/response_from_usr_egr"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/big_text_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/red"
                app:layout_constraintTop_toBottomOf="@+id/tvResponseTitle" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEgrName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:minLines="3"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/text_color_normal"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:text="Alfa-Gomel" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEgrFio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:paddingStart="8dp"

                android:textColor="@color/text_color_normal"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvEgrName"
                app:layout_constraintTop_toBottomOf="@+id/fio"
                tools:text="FIO Person" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEgrType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:textColor="@color/text_color_normal"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvEgrFio"
                app:layout_constraintTop_toBottomOf="@+id/type"
                tools:text="Type" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEgrDirection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"

                android:minLines="2"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/text_color_normal"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvEgrType"
                app:layout_constraintTop_toBottomOf="@+id/direction"
                tools:text="Direction" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEgrUnp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:paddingStart="8dp"

                android:textColor="@color/text_color_normal"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvEgrDirection"
                app:layout_constraintTop_toBottomOf="@+id/unp"
                tools:text="UNP" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEgrAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:minLines="2"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/text_color_normal"
                android:textIsSelectable="true"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address"
                tools:text="Address" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEgrStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/text_color_normal"

                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/status"
                tools:text="Status" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:paddingTop="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/links_color"
                android:text="@string/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <TextView
                android:id="@+id/fio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/links_color"
                android:text="@string/personal_information"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEgrName" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/links_color"
                android:text="@string/individual_or_legal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEgrFio" />

            <TextView
                android:id="@+id/direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/links_color"
                android:text="@string/direction_of_activity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEgrType" />

            <TextView
                android:id="@+id/unp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/links_color"
                android:text="@string/personal_number_unp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEgrDirection" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/links_color"
                android:text="@string/address_of_company"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEgrUnp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/links_color"
                android:text="@string/status_active_liquidated_etc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEgrAddress" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>