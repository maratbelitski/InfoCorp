<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:padding="@dimen/normal_padding_size"
    android:background="@color/first_background_color"
    tools:context=".presentation.account.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/accountCard"
            layout="@layout/account_layout"/>

        <include
            android:id="@+id/userEmailTypeCard"
            layout="@layout/user_email_type"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
