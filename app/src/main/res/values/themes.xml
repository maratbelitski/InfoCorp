<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.InfoCorp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/first_background_color</item>
        <item name="android:colorBackground">@color/first_background_color</item>
        <item name="android:navigationBarColor">@color/second_background_color</item>
    </style>


    <style name="Theme.InfoCorp" parent="Base.Theme.InfoCorp" />

    <style name="MyStyle.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="hintTextColor">@color/text_color_normal</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="cursorColor">@color/text_color_normal</item>
        <item name="boxStrokeColor">@color/text_color_normal</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>


    <style name="MyStyle.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="color">@color/hint_text_color</item>
    </style>

    <style name="MyStyle.TextViewBig" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/second_background_color</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:padding">@dimen/normal_padding_size</item>
    </style>

    <style name="MyStyle.TextViewNormal" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/second_background_color</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:padding">@dimen/normal_padding_size</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="MyStyle.TextViewEditTextTittle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_margin">@dimen/normal_margin_size</item>
    </style>

    <style name="MyStyle.TextViewItemCorp" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/min_padding_size</item>
        <item name="android:paddingEnd">@dimen/min_padding_size</item>
        <item name="android:paddingBottom">@dimen/min_padding_size</item>
        <item name="android:textSize">@dimen/min_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyStyle.ButtonNormal" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">@dimen/big_margin_size</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/text_color_button</item>
        <item name="android:textSize">@dimen/min_text_size</item>

    </style>
</resources>