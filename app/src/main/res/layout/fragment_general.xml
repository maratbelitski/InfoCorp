<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/normal_padding_size"
    tools:context=".presentation.generaldisplay.GeneralFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/first_background_color">

        <include
            android:id="@+id/statisticCard"
            layout="@layout/statistic_layout" />

        <include
            android:id="@+id/shimmerLayout"
            layout="@layout/shimmer_statistic_layout" />

        <include
            android:id="@+id/resumeLayout"
            layout="@layout/list_resume_layout" />
    </LinearLayout>
</ScrollView>